	$(document).ready(function() {
		$("#libXmlrpcProfileForm").validate({
		  submitHandler: function(form) {
			  doUpdate("libXmlrpcProfile", "libXmlrpcProfile", "api/data/" + mode,
			  	"LibXmlrpcProfileGrid", theme + "/lib-xmlrpc-profile-grid",
					false, true, false, {});
		  }
		});
	});
</script>